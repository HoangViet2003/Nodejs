<div class="mt-4">
    <div class="row">

        <div class="col-sm-6 col-lg-4">
            {{#each posts}}
            <div class="card card-course-item" style="width: 18rem;">
             
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <a href='/posts/{{this.slug}}' class="btn btn-primary">
                        <h5 class="card-title">{{this.title}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/posts/{{this.slug}}" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</div>